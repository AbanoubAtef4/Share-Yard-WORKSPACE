<Window x:Class="Center_Maneger.View.checkPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="الدخول علي صفحة الاعدادات" Height="300" Width="500">
    <Grid>
        <TextBlock Text="أدخل كلمة المرور" HorizontalAlignment="Center" Margin="0 50 0 0" FontSize="25" FontWeight="Bold"/>
        <PasswordBox x:Name="password_input" Width="180" Height="20" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 20 0 0"/>
        <Button Click="check_passowrd" Content="حفظ" Height="30" Width="80" FontWeight="Bold" VerticalAlignment="Bottom" Margin="0 0 0 50"/>
    </Grid>
</Window>
