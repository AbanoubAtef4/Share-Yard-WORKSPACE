<UserControl x:Class="Center_Maneger.UesrControls.Member_Offers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{StaticResource bguc}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.35*"/>
            <RowDefinition Height="0.65*"/>
        </Grid.RowDefinitions>

        
            <StackPanel Grid.Row="0">

            <Border Margin="0 5" Width="150" BorderBrush="{StaticResource Whitetext}" Background="#FFFF9A5C" CornerRadius="7" BorderThickness="5">
                    <TextBlock Style="{StaticResource TextBlockStyle}" Text="عروض الاعضاء" FontSize="18" FontWeight="Bold" Foreground="{StaticResource text}" HorizontalAlignment="Center"/>
                </Border>
        </StackPanel>

        <StackPanel Margin="0 25" Orientation="Horizontal" HorizontalAlignment="Center" >
            <Button Style="{StaticResource Roundedbtn}" BorderThickness="0" Width="100" Height="40"   FontSize="16" FontWeight="Bold" Background="Transparent" >
                <StackPanel Orientation="Horizontal" >
                    <Image Source="/img/show.png" Width="40" Height="35" />
                    <TextBlock Style="{StaticResource TextBlockStyle}" Text="عرض" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <CheckBox  Content="العروض المنتهية " x:Name="expired_offers" FontSize="22" FontWeight="Bold" Foreground="{StaticResource text}" FontFamily="Amiri, Cairo, 'Segoe UI', Tahoma" 
                    VerticalAlignment="Center"  Margin="40" FlowDirection="LeftToRight" />
           
        </StackPanel>
        <DataGrid  SelectionChanged="change_selected_record" AutoGeneratingColumn="change_header_name"  
                  FlowDirection="RightToLeft" IsReadOnly="True" FontSize="16" x:Name="data_grid"  Grid.Row="1" ColumnWidth="0.5*"/>
    </Grid>
</UserControl>
